<?xml version="1.0" encoding="utf-8" ?>
<views:Expander
    x:Class="KaraKuljaFund.MAUI.Views.Controls.FloutAction"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Margin="30"
    Direction="Up"
    HorizontalOptions="End"
    VerticalOptions="End">
    <views:Expander.Header>
        <ImageButton
            BackgroundColor="{StaticResource Blue100Accent}"
            CornerRadius="20"
            HorizontalOptions="End"
            VerticalOptions="End">
            <ImageButton.Source>
                <FontImageSource FontFamily="FASolid" Glyph="&#x2b;" />
            </ImageButton.Source>
        </ImageButton>
    </views:Expander.Header>
    <views:Expander.Content>
        <VerticalStackLayout Spacing="20">
            <Button Background="{StaticResource Blue200Accent}"   Text="Помощь" x:Name="btnHelp" Clicked="btnHelp_Clicked"  />
            <Button Background="{StaticResource Blue200Accent}" Text="Взнос" x:Name="btnContribution" Clicked="btnContribution_Clicked"  />


        </VerticalStackLayout>
    </views:Expander.Content>
</views:Expander>


